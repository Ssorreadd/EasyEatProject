        <Button x:Name="EatDishButton" Click="EatDishButton_Click" Visibility="Hidden" VerticalContentAlignment="Top" Padding="3" Width="82" Height="45"   Margin="-25 80 20 -15" Content="Съесть" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="2" FontSize="16">
            <Button.Style>
                <Style TargetType="Button"  BasedOn="{StaticResource NavigationButtonsStyle}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border" CornerRadius="10 10 0 0" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                                    <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsDefaulted" Value="true">
                                        <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="Background" TargetName="border" Value="#5EC3B1"/>
                                        <Setter Property="BorderBrush" TargetName="border" Value="#2E645A"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="true">
                                        <Setter Property="Background" TargetName="border" Value="#4B998B"/>
                                        <Setter Property="BorderBrush" TargetName="border" Value="#2E645A"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="false">
                                        <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                        <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                        <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Button.RenderTransform>
                <RotateTransform Angle="270"/>
            </Button.RenderTransform>
        </Button>

 

        <StackPanel Orientation="Vertical" VerticalAlignment="Top"  Margin="20 27 0 20" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Background="#D6FFDA" BorderBrush="#89BB8F"  BorderThickness="3 3 1.5 3" Width="70"  Height="42" CornerRadius="10 0 0 10">
                    <TextBlock Text="Поиск:" HorizontalAlignment="Center" FontSize="16"  VerticalAlignment="Center" Opacity="0.5"/>
                </Border>

                <Border Background="#E5FFE8" BorderBrush="#89BB8F"  BorderThickness="1.5 3 3 3" Width="290"  Height="42" CornerRadius="0 10 10 0">
                    <TextBox Name="SearchBox" TextChanged="SearchBox_TextChanged"  Width="275" Height="40" FontSize="16" VerticalAlignment="Center" VerticalContentAlignment="Center" TextAlignment="Left"/>
                </Border>
            </StackPanel>
        </StackPanel>



        <Frame Name="DishFrameLV" NavigationUIVisibility="Hidden" Grid.Column="2"/>




        <ListView Name="ProductsLV" Margin="20 98 0 30" Width="366" Style="{StaticResource ProductsStyleLV}" SelectionChanged="ProductsLV_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="1">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource ProductsItemStyle}">
                    <Setter Property="IsEnabled" Value="{Binding IsEnabledProduct}"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <!--<Viewbox Height="22" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <CheckBox Content="{Binding Name}" x:Name="ProductCheckBox"/>
                            </Viewbox>-->
                            <TextBlock x:Name="ProductName" Text="{Binding Name}" MaxWidth="300" TextWrapping="Wrap" FontSize="18"/>

                            <!--<TextBlock x:Name="ProductName" Text="{Binding Name}" FontSize="24" HorizontalAlignment="Center" FontFamily="Comic Sans MS" Margin="0 15 0 0" />-->



                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border Background="#4B998B" BorderBrush="#2E645A" Width="366" BorderThickness="4" Margin="20 77 0 20" Height="23" VerticalAlignment="Top" Grid.Row="1" CornerRadius="10 10 0 0"/>

        <ListView Name="DishLV" Margin="0 98 20 90" Width="366" ItemContainerStyle="{StaticResource ProductsItemStyle}" Style="{StaticResource ProductsStyleLV}" SelectionChanged="DishLV_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Column="2" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <!--<Viewbox Height="22" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <CheckBox Content="{Binding Name}" x:Name="ProductCheckBox"/>
                            </Viewbox>-->
                            <TextBlock x:Name="ProductName" Text="{Binding ProductName}" MaxWidth="240" TextWrapping="Wrap" FontSize="18"/>
                            <TextBlock Text=" | " MaxWidth="240" TextWrapping="Wrap" FontSize="18"/>

                            <TextBlock x:Name="ProductNameCalories" Text="{Binding ProductCalories, StringFormat={}{0} ккал}" TextWrapping="Wrap" FontSize="18"/>

                            <!--<TextBlock x:Name="ProductName" Text="{Binding Name}" FontSize="24" HorizontalAlignment="Center" FontFamily="Comic Sans MS" Margin="0 15 0 0" />-->



                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Border Background="#D6FFDA" BorderBrush="#52926F" Width="277" BorderThickness="4 4 1 1" Margin="7.2 80 20 75" Height="37" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Grid.Column="2" CornerRadius="0 0 0 0">
            <TextBlock Text="Наименование блюда" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center" />
        </Border>

        <Border Background="#E5FFE8" BorderBrush="#52926F" Width="277" BorderThickness="4 1 1 4" Margin="7.2 80 20 30" Height="45" VerticalAlignment="Bottom"  HorizontalAlignment="Left" Grid.Column="2" CornerRadius="0 0 0 10">
            <TextBox x:Name="DishNameBox" Width="260" Height="40" FontSize="16" VerticalAlignment="Center" TextWrapping="Wrap" VerticalContentAlignment="Center" TextAlignment="Center" TextChanged="DishNameBox_TextChanged"/>

        </Border>


        <Border Background="#D6FFDA" BorderBrush="#52926F" Width="90" BorderThickness="2 4 4 1" Margin="0 77 27.15 75" HorizontalAlignment="Right" Height="37" VerticalAlignment="Bottom" Grid.Column="2" CornerRadius="0 0 0 0">
            <TextBlock Text="Всего ккал" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>

        <Border Background="#E5FFE8" BorderBrush="#52926F" Width="90" BorderThickness="2 1 4 4" Margin="0 77 27.15 30" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="2" CornerRadius="0 0 10 0">
            <TextBlock Name="AllCalories" Text="0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>


        <Border Background="#4B998B" BorderBrush="#2E645A" BorderThickness="4"  Margin="0 77 20 20" Height="23" Width="366" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" CornerRadius="10 10 0 0"/>


        <Frame Grid.Row="1" Grid.Column="1" Name="EatDishWindowFrame" NavigationUIVisibility="Hidden" Margin="10 150 10 150" Height="260"/>

    </Grid>
</Window>
